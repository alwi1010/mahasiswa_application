<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detailData">

    <TextView
        android:id="@+id/text_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/text_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/text_jurusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/text_jekel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/text_tgllahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/text_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"/>

    <Button
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editData" />

    <Button
        android:id="@+id/del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delData" />

</LinearLayout>